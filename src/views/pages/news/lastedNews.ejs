<%- include('../../partials/news/header.ejs'); -%>

  <!-- Preloader Start -->
  <div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
      <div class="preloader-inner position-relative">
        <div class="preloader-circle"></div>
        <div class="preloader-img pere-text">
          <img src="/news/img/logo/logo.png" alt="">
        </div>
      </div>
    </div>
  </div>

  <header>

    <div class="header-area">
      <div class="main-header "> 

        <div class="header-mid gray-bg">
          <div class="container">
            <div class="row d-flex align-items-center">
              <!-- Logo -->
              <div class="col-xl-3 col-lg-3 col-md-3 d-none d-md-block">
                <div class="logo">
                  <a href="index.html"><img src="/news/img/logo/logo.png" alt=""></a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%- include('../../partials/news/navbar.ejs'); -%>
        
      </div>
    </div>
    <!-- Header End -->
  </header>

  <main>
      
    <section class="whats-news-area pt-50 pb-20 gray-bg">
      <div class="container">
        <div class="row">

          <% news.forEach(n => { %>                    
            <div class="whats-news-wrapper mb-2">              
              <div class="whats-right-single mb-20">
                <div class="whats-right-img">
                  <img src="/uploads/<%= n.imagem %>" alt="">
                </div>
                <div class="whats-right-cap">
                  <div class="d-flex flex-column">
                    <h4 class="text-dark"><%= n.titulo %></h4>
                    <span class="d-flex flex-row">
                      <div class="mr-5">POR: <%= n.author.toUpperCase() %></div>
                    </span>
                  </div>
                  <h4>
                    <p id="desciptionNews">
                      <a href="latest_news.html">
                        <%=  n.descricao %>
                      </a>
                    </p>
                  </h4>                  
                </div>
              </div>
            </div>
          <% }) %>

          <div class="col-lg-12 mb-2">
            
          </div>

        </div>
      </div>
    </section>

  </main>

  <%- include('../../partials/news/footer.ejs'); -%>

</html>