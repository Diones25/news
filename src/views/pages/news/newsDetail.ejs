<%- include('../../partials/news/header.ejs'); -%>

  <!-- Preloader Start -->
  <div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
      <div class="preloader-inner position-relative">
        <div class="preloader-circle"></div>
        <div class="preloader-img pere-text">
          <img src="/news/img/logo/logo.png" alt="">
        </div>
      </div>
    </div>
  </div>

  <header>

    <div class="header-area">
      <div class="main-header "> 

        <div class="header-mid gray-bg">
          <div class="container">
            <div class="row d-flex align-items-center">
              <!-- Logo -->
              <div class="col-xl-3 col-lg-3 col-md-3 d-none d-md-block">
                <div class="logo">
                  <a href="index.html"><img src="/news/img/logo/logo.png" alt=""></a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%- include('../../partials/news/navbar.ejs'); -%>
        
      </div>
    </div>
    <!-- Header End -->
  </header>

  <main>
    <!-- About US Start -->
    <div class="body flex-grow-1 px-3">
      <div class="container">
        <div class="row">

          <div class="mt-5">
            <div class="card mb-3 p-4" style="border: none;">
              <div class="card-body" style="padding: 1.25rem 0;">
                <h5 class="card-title">
                  <%= news.titulo %>
                </h5>
                <div class="card-text">
                  <small class="text-body-secondary">POR: <%= news.author.toUpperCase() %></small>
                  <small class="text-body-secondary ms-5"><%= data %></small>
                </div>
              </div>
              <img src="/uploads/<%= news.imagem %>" class="img-fluid" alt="...">
              <div class="card-body" style="padding: 1.25rem 0;">                  
                <div class="card-text mt-2">
                  <span>
                    <%=  news.descricao %>
                  </span>
                </div>
              </div>
            </div>
                         
          </div>
        </div>
      </div>
    </div>
    <!-- About US End -->
</main>


  <%- include('../../partials/news/footer.ejs'); -%>

</html>

